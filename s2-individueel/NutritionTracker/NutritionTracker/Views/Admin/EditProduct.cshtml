@model AModelLayer.Models.ProductModel
@{
    ViewData["Title"] = "Edit product";
}

<div class="container">
    <form method="post" asp-action="EditProduct">
        <div class="row pb-2">
            <h2>Edit product</h2>
            <hr/>
        </div>
        <div class="d-md-flex justify-content-between">
            <div class="mb-3 w-100">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="d-md-flex justify-content-between">
            <div class="mb-3">
                <label asp-for="Calorie"></label>
                <input type="number" step="0.000001" asp-for="Calorie" class="form-control"/>
                <span asp-validation-for="Calorie" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Fat"></label>
                <input type="number" step="0.000001" asp-for="Fat" class="form-control"/>
                <span asp-validation-for="Fat" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Carb"></label>
                <input type="number" step="0.000001" asp-for="Carb" class="form-control"/>
                <span asp-validation-for="Carb" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Protein"></label>
                <input type="number" step="0.000001" asp-for="Protein" class="form-control"/>
                <span asp-validation-for="Protein" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Sugar"></label>
                <input type="number" step="0.000001" asp-for="Sugar" class="form-control"/>
                <span asp-validation-for="Sugar" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Salt"></label>
                <input type="number" step="0.000001" asp-for="Salt" class="form-control"/>
                <span asp-validation-for="Salt" class="text-danger"></span>
            </div>
        </div>
        <div class="pb-3">
            <button type="submit" class="btn btn-primary ">Update product</button>
            <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Back to products</a>
        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}