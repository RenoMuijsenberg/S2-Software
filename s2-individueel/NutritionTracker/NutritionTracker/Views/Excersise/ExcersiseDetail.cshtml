@model AModelLayer.Models.ExcersiseModel
@{
    ViewData["Title"] = "Edit scheme";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center justify-content-between w-100">
                <h1>@Model.Name</h1>
                <div class="d-flex">
                    <a asp-controller="Set" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-primary">Add set</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Set</th>
                        <th>Reps</th>
                        <th>Weight</th>
                        <th class="w-25">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @if (Model.Sets != null)
                    {
                        @foreach (var set in Model.Sets)
                        {
                            <tr>
                                <td>@set.DisplayOrder</td>
                                <td>@set.Reps</td>
                                <td>@set.Weight</td>
                                <td>
                                    <div class="d-flex">
                                        <a asp-controller="set" asp-action="EditSet" asp-route-id="@set.Id" class="btn btn-secondary">Edit</a>
                                        <form asp-controller="Set" asp-action="DeleteSet" asp-route-id="@set.Id" method="post">
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}