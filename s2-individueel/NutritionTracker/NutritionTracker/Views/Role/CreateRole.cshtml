@model NutritionTracker.Models.Role.RoleViewModel
@{
    ViewData["Title"] = "Roles Page";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>Create role:</h1>
            <form method="post" asp-controller="Role" asp-action="CreateRole">
                <div class="form-group mb-3">
                    <label asp-for="RoleName"></label>
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary mb-3 w-25 float-left">Create role</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}