@model NutritionTracker.Models.Role.EditViewRoleModel
@{
    ViewData["Title"] = "Edit role";
}

<div class="container">
     <form method="post" asp-action="EditRole">
        <div class="row pb-2">
            <h2>Edit role</h2>
            <hr />
        </div>
        <div class="d-md-flex">
            <div class="mb-3 w-100">
                <label asp-for="Id"></label>
                <input asp-for="Id" class="form-control" disabled/>
            </div>            
            <div class="mb-3 w-100">
                <label asp-for="RoleName"></label>
                <input asp-for="RoleName" class="form-control"/>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        </div>
        <div class="pb-3">
            <button type="submit" class="btn btn-primary ">Update role</button>
            <a asp-controller="Role" asp-action="Index" class="btn btn-secondary">Back to roles</a>
        </div>
    </form>
    <div class="card">
        <div class="card-header">
            <h3>Users in this role</h3>
        </div>
        <div class="card-body">
            @if (Model.Users != null) 
            {
                @foreach(var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">None</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-controller="Role" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" class="btn btn-primary">Add or remove users</a>
        </div>
    </div>
</div>